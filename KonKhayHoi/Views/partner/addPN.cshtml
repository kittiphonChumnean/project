<!DOCTYPE HTML>
<html lang="en">
<head>
    <title>Kon Khay Hoi</title>
    <meta charset="UTF-8">
    <link rel="shortcut icon" type="image/x-icon" href="~/bootstrap/style/images/konKhayHoi.png">
    <link rel="stylesheet" type="text/css" href="~/bootstrap/style/css/style.css" media="all">
    <link href='http://fonts.googleapis.com/css?family=Amaranth' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Droid+Serif:400,400italic,700,700italic' rel='stylesheet' type='text/css'>

    <script src="~/bootstrap/style/js/jquery-1.6.4.min.js"></script>
    <script src="~/bootstrap/style/js/ddsmoothmenu.js"></script>
    <script src="~/bootstrap/style/js/jquery.jcarousel.js"></script>
    <script src="~/bootstrap/style/js/jquery.prettyPhoto.js"></script>
    <script src="~/bootstrap/style/js/carousel.js"></script>
    <script src="~/bootstrap/style/js/jquery.flexslider-min.js"></script>
    <script src="~/bootstrap/style/js/jquery.masonry.min.js"></script>
    <script src="~/bootstrap/style/js/jquery.slickforms.js"></script>
</head>
@using (Html.BeginForm())
{
    <body>
        <div id="wrapper">
            @Html.AntiForgeryToken()
            <div id="sidebar">
                <div id="logo"><center><img src="~/bootstrap/style/images/logo.png"></center></div>
                <div id="menu" class="menu-v">
                    <ul>
                        <li><a class="active" onclick="location.href='@Url.Action("dataFarm", "farm")';">ข้อมูลฟาร์ม</a></li>
                        <li><a class="active" onclick="location.href='@Url.Action("profile", "Admin")';">แก้ไขข้อมูลส่วนตัว</a></li>
                        <li><a class="active" onclick="location.href='@Url.Action("viewRevenue", "Admin")';">รายได้</a></li>
                        <li><a class="active" onclick="location.href='@Url.Action("viewExpenditure", "Admin")';">รายจ่าย</a></li>
                        <li><a class="active" onclick="location.href='@Url.Action("CheckProfit", "Admin")';">ตรวจสอบกำไร</a></li>
                        <li><a class="active" onclick="location.href='@Url.Action("Circulation", "Admin")';">ตรวจสอบยอดขาย</a></li>
                        <li><a class="active" onclick="location.href='@Url.Action("ViewPN", "partner")';">เพิ่ม แก้ไข(หุ้นส่วน)</a></li>
                        <li><a class="active" onclick="location.href='@Url.Action("Viewstore", "shop")';">ดูข้อมูลร้านรับซื้อ</a></li>
                        <li><a class="active" onclick="location.href='@Url.Action("changPassword", "Admin")';">เปลี่ยนรหัสผ่าน</a></li>
                        <li><a class="active" onclick="location.href='@Url.Action("login", "login")';">ออกจากระบบ</a></li> 
                    </ul>
                </div>
            </div>

            <div id="content">
                <font color="#fffff">  <h5 class="title">สวัสดี คุณ @HttpContext.Current.Session["A_name"] @HttpContext.Current.Session["A_lastname"]</h5></font>
                <div class="line"></div>
                <div class="container-fluid">
                    <table border="0" background="style/images/bgt.png">
                        <tr>

                            
                            <td align="center" >  <img src="~/bootstrap/style/images/viewP.png" onclick="location.href='@Url.Action("ViewPN","partner")';">  </td>
                            <td align="center" bgcolor="#ffffff">  <img src="~/bootstrap/style/images/addP.png" onclick="location.href='@Url.Action("addPN","partner")';">  </td>


                        </tr>
                    </table>
                    <div class="animated fadeIn">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card">
                                    <div style="width:100%; height:450px; overflow-y: scroll; scrollbar-arrow-color:blue; scrollbar-face-color: #e7e7e7; scrollbar-3dlight-color: #a0a0a0; scrollbar-darkshadow-color:#888888">
                                        <br><font size="10" color="green">&nbsp;&nbsp;@ViewBag.Message</font>
                                        <div class="card-block">
                                            <div class="row">

                                                <div class="col-sm-6">

                                                    <div class="form-group">
                                                        <label for="cvv">ชื่อ</label>
                                                        <input type="text" class="form-control" required="required" name="name" id="cvv" placeholder="">
                                                    </div>
                                                </div>

                                                <div class="col-sm-6">

                                                    <div class="form-group">
                                                        <label for="cvv">นามสกุุล</label>
                                                        <input type="text" class="form-control" required="required" name="lastname" id="cvv" placeholder="">
                                                    </div>

                                                </div>
                                            </div>
                                            <div class="row">

                                                <div class="col-sm-12">

                                                    <div class="form-group">
                                                        <label for="ccnumber">เบอร์โทร</label>
                                                        <input type="text" class="form-control" required="required" id="ccnumber" name="tel" placeholder="">
                                                    </div>

                                                </div>

                                            </div>
                                            <!--/.row-->

                                            <div class="row">

                                                <div class="col-sm-4">

                                                    <div class="form-group">
                                                        <label for="cvv">บ้านเลขที่</label>
                                                        <input type="text" class="form-control" required="required" name="no" id="cvv" placeholder="">
                                                    </div>

                                                </div>


                                                <div class="col-sm-4">

                                                    <div class="form-group">
                                                        <label for="cvv">ตำบล</label>
                                                        <input type="text" class="form-control" required="required" name="subD" id="cvv" placeholder="">
                                                    </div>

                                                </div>




                                            </div>
                                            <!--/.row-->

                                            <div class="row">
                                                <div class="col-sm-4">

                                                    <div class="form-group">
                                                        <label for="cvv">อำเภอ</label>
                                                        <input type="text" class="form-control" required="required" name="sub" id="cvv" placeholder="">
                                                    </div>

                                                </div>

                                                <div class="col-sm-4">

                                                    <div class="form-group">
                                                        <label for="cvv">จังหวัด</label>
                                                        <input type="text" class="form-control" required="required" name="proV" id="cvv" placeholder="">
                                                    </div>

                                                </div>
                                            </div>

                                            <div class="row">

                                                <div class="col-sm-12">

                                                    <div class="form-group">
                                                        <label for="ccnumber">จำนวนเงินที่ร่วมลงทุน</label>
                                                        <input type="text" class="form-control" id="ccnumber" required="required" name="investment" placeholder="ใส่เฉพาะตัวเลข">
                                                    </div>

                                                </div>
                                                <div class="col-sm-12">

                                                    <div class="form-group">
                                                        <label for="ccnumber">รหัสผ่าน</label>
                                                        <input type="password" class="form-control" id="ccnumber" required="required" name="pass" placeholder="">
                                                    </div>
                                                    <br>
                                                    <div class="form-group form-actions">

                                                        <input class="btn btn-success btn-lg" type="submit" value="บันทึก" />

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="clear"></div>
                <script src="~/bootstrap/style/js/scripts.js"></script>
                <!--[if !IE]> -->
                <script src="~/bootstrap/style/js/jquery.corner.js"></script>
    </body>
}
</html>

