@model Tuple<List<KonKhayHoi.Models.Shop>>
<!DOCTYPE HTML>
<html lang="en">
<head>

    <title>Kon Khay Hoi</title>
    <meta charset="UTF-8">
    <link rel="shortcut icon" type="image/x-icon" href="style/images/favicon.png">
    <link rel="stylesheet" type="text/css" href="~/bootstrap/style/css/style.css" media="all">
    <link href='http://fonts.googleapis.com/css?family=Amaranth' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Droid+Serif:400,400italic,700,700italic' rel='stylesheet' type='text/css'>

    <script src="~/bootstrap/style/js/jquery-1.6.4.min.js"></script>
    <script src="~/bootstrap/style/js/ddsmoothmenu.js"></script>
    <script src="~/bootstrap/style/js/jquery.jcarousel.js"></script>
    <script src="~/bootstrap/style/js/jquery.prettyPhoto.js"></script>
    <script src="~/bootstrap/style/js/carousel.js"></script>
    <script src="~/bootstrap/style/js/jquery.flexslider-min.js"></script>
    <script src="~/bootstrap/style/js/jquery.masonry.min.js"></script>
    <script src="~/bootstrap/style/js/jquery.slickforms.js"></script>
</head>
@using (Html.BeginForm())
{
    <body>
        @Html.AntiForgeryToken()
        <div id="wrapper">
            <div id="sidebar">
                <div id="logo"><center><img src="~/bootstrap/style/images/logo.png"></center></div>
                <div id="menu" class="menu-v">
                    <ul>
                        <li><a href="showList.php" class="active"></a></li>
                        <li><a class="active" onclick="location.href='@Url.Action("STdatastore", "Shop")';">ข้อมูลร้าน</a></li>
                        <li><a class="active" onclick="location.href='@Url.Action("STselectdatafarm", "Shop")';">ข้อมูลฟาร์ม</a></li>
                        <li><a class="active" onclick="location.href='@Url.Action("STchangPassword", "Shop")';">เปลี่ยนรหัสผ่าน</a></li>
                        <li><a class="active" onclick="location.href='@Url.Action("login", "login")';">ออกจากระบบ</a></li>
                    </ul>
                </div>
            </div>

            <div id="content">
                <font color="#fffff">  <h5 class="title">สวัสดี คุณ @HttpContext.Current.Session["S_name"] @HttpContext.Current.Session["S_lastname"]</h5></font>
                <div class="line"></div>



                <div class="container-fluid">
                    <div class="animated fadeIn">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card">
                                    <div class="card-header">
                                        <strong><img src="~/bootstrap/style/images/datashop.png"></strong>

                                    </div>
                                    <div style="width: 100%; height:400px; overflow-y: scroll; scrollbar-arrow-color:blue; scrollbar-face-color: #e7e7e7; scrollbar-3dlight-color: #a0a0a0; scrollbar-darkshadow-color:#888888">
                                        <div class="card-block">
                                            <div class="row">

                                                <div class="col-sm-12">

                                                    <div class="form-group">
                                                        <label for="name">ชื่อผู้ใช้</label>
                                                        <input type="text" class="form-control" id="name" name="Suser" value="@HttpContext.Current.Session["Suser"]" readonly placeholder="">
                                                    </div>

                                                </div>

                                                <div class="col-sm-12">

                                                    <div class="form-group">
                                                        <label for="name">ชื่อร้านรับซื้อ</label>
                                                        <input type="text" class="form-control" id="name" name="name" value="@HttpContext.Current.Session["name"]" readonly placeholder="">
                                                    </div>

                                                </div>

                                            </div>
                                            <!--/.row-->
                                            <div class="row">



                                                <div class="col-sm-4">

                                                    <div class="form-group">
                                                        <label for="cvv">ชื่อ</label>
                                                        <input type="text" class="form-control" id="cvv" name="name" value="@HttpContext.Current.Session["Sname"]" readonly placeholder="">
                                                    </div>

                                                </div>

                                                <div class="col-sm-4">

                                                    <div class="form-group">
                                                        <label for="cvv">นามสกุล</label>
                                                        <input type="text" class="form-control" id="cvv" name="lastname" value="@HttpContext.Current.Session["Slastname"]" readonly placeholder="">
                                                    </div>

                                                </div>


                                            </div>

                                            <div class="row">

                                                <div class="col-sm-12">

                                                    <div class="form-group">
                                                        <label for="ccnumber">เบอร์โทร</label>
                                                        <input type="text" class="form-control" id="ccnumber" name="tel" value="@HttpContext.Current.Session["Stel"]" readonly placeholder="">
                                                    </div>

                                                </div>

                                            </div>
                                            <div class="row">

                                                <div class="col-sm-4">

                                                    <div class="form-group">
                                                        <label for="cvv">บ้านเลขที่</label>
                                                        <input type="text" class="form-control" id="cvv" name="no" value="@HttpContext.Current.Session["Sno"]" readonly placeholder="">
                                                    </div>

                                                </div>


                                                <div class="col-sm-4">

                                                    <div class="form-group">
                                                        <label for="cvv">ตำบล</label>
                                                        <input type="text" class="form-control" id="cvv" name="subD" value="@HttpContext.Current.Session["SsubD"]" readonly placeholder="">
                                                    </div>

                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-sm-4">

                                                    <div class="form-group">
                                                        <label for="cvv">อำเภอ</label>
                                                        <input type="text" class="form-control" id="cvv" name="sub" value="@HttpContext.Current.Session["Ssub"]" readonly placeholder="">
                                                    </div>

                                                </div>

                                                <div class="col-sm-4">

                                                    <div class="form-group">
                                                        <label for="cvv">จังหวัด</label>
                                                        <input type="text" class="form-control" id="cvv" name="proV" value="@HttpContext.Current.Session["SproV"]" readonly placeholder="">
                                                    </div>

                                                </div>


                                            </div>

                                            <div class="row">

                                                <div class="col-sm-12">

                                                    <div class="form-group">
                                                        <label for="ccnumber">จำนวนที่รับซื้อ(ต่อตัน)</label>
                                                        <input type="text" class="form-control" name="purchasedAmount" id="ccnumber" value="@HttpContext.Current.Session["SpurchasedAmount"]" readonly placeholder="เฉพาะตัวเลข">
                                                       <br>
                                                        <br>
                                                        <center>
                                                            <input id="Button1" type="button" value="แก้ไขข้อมูลส่วนตัว" class="btn btn-danger btn-lg" onclick="location.href='@Url.Action("Editprofile", "Admin")';">
                                                        </center>
                                                    </div>

                                                </div>

                                                
                                                           

                                                    </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="clear"></div>
                <script src="~/bootstrap/style/js/scripts.js"></script>
                <!--[if !IE]> -->
                <script src="~/bootstrap/style/js/jquery.corner.js"></script>
                <!-- <![endif]-->
                <!-- <![endif]-->
    </body>
}
</html>

